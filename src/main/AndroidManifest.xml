<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />

    <application
        android:name=".SemScanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/Theme.SemScan"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="30">
        
        <activity
            android:name=".ui.RolePickerActivity"
            android:exported="true"
            android:theme="@style/Theme.SemScan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.student.StudentHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan" />
            
        <activity
            android:name=".ui.student.ManualAttendanceRequestActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan" />
            
        <activity
            android:name=".ui.teacher.PresenterHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan" />
            
        <activity
            android:name=".ui.teacher.PresenterStartSessionActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan"
            android:screenOrientation="portrait"
            android:keepScreenOn="true" />
            
            
        <activity
            android:name=".ui.qr.QRScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan" />
            
        <activity
            android:name=".ui.qr.ModernQRScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan" />
            
        <activity
            android:name=".ui.qr.QRDisplayActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan"
            android:screenOrientation="portrait"
            android:keepScreenOn="true" />
            
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan" />
            
        <activity
            android:name=".ui.teacher.ExportActivity"
            android:exported="false"
            android:theme="@style/Theme.SemScan" />

        <!-- FileProvider for secure file sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="org.example.semscan.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
