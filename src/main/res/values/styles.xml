<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SemScanToolbarPopup" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@color/white_900</item>
        <item name="android:textColorPrimary">@color/gray_900</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:colorForeground">@color/gray_900</item>
        <item name="colorControlNormal">@color/gray_900</item>
        <item name="android:itemTextAppearance">@style/SemScanPopupMenuItem</item>
    </style>

    <style name="SemScanPopupMenuItem" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="SemScanButtonOutlinedPrimary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">18dp</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>
