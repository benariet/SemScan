<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow HTTP for localhost and Android emulator -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Add your local development server IP here -->
        <domain includeSubdomains="true">192.168.1.100</domain>
        <domain includeSubdomains="true">132.73.167.231</domain>
        <domain includeSubdomains="true">132.72.167.231</domain>
    </domain-config>
    
    <!-- For production, remove cleartextTrafficPermitted="true" -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>





