<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Start Session"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start New Session"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a course and start a new attendance session"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="32dp" />

            <!-- Your Seminars Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Seminars"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp" />

            <!-- Test with simple ListView instead of RecyclerView -->
            <ListView
                android:id="@+id/list_seminars"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            

            <!-- Test API Button (for debugging) -->
            <Button
                android:id="@+id/btn_test_api"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Test API Response"
                android:textSize="14sp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="16dp" />

            <!-- Bottom Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_create_seminar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Add New Seminar"
                    android:textSize="16sp"
                    android:background="@drawable/button_secondary"
                    android:textColor="@color/gray_800"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_start_session"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="START SESSION"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
