<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/context_picker_title"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/context_picker_subtitle"
            android:textSize="16sp"
            android:textColor="@color/gray_600"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_context_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_context_student"
                style="@style/SemScanButtonOutlinedPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/im_participant"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_context_presenter"
                style="@style/SemScanButtonOutlinedPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/im_presenting_semester" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_context_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/continue_label"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="@color/primary_blue"
        app:cornerRadius="18dp"
        app:strokeColor="@color/primary_blue_dark"
        app:strokeWidth="1dp" />

</LinearLayout>

