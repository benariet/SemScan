<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="72dp">

    <TextView
        android:id="@+id/text_seminar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Availability Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_900"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/text_seminar_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seminar Name"
        android:textSize="14sp"
        android:textColor="@color/gray_700"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/text_seminar_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mon, Wed • 10:00–11:30"
        android:textSize="13sp"
        android:textColor="@color/gray_600"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/text_seminar_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="13sp"
        android:textColor="@color/gray_600"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end" />

</LinearLayout>
