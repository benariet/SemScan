<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Student Name and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_student_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John Doe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_request_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:42 AM"
                android:textSize="12sp"
                android:textColor="@color/gray_600" />

        </LinearLayout>

        <!-- Reason -->
        <TextView
            android:id="@+id/text_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera broken"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            android:layout_marginBottom="8dp" />

        <!-- Flags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_flags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✓ In window"
                android:textSize="12sp"
                android:textColor="@color/success_green"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_duplicate_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠ Duplicate"
                android:textSize="12sp"
                android:textColor="@color/warning_orange"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Approve"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_success_small"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_danger_small"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
