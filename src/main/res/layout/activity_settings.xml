<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/settings_title"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- User ID / Email Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_id_email"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_800"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/edit_user_id"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/edittext_background"
                        android:padding="16dp"
                        android:hint="you@example.com"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:textColor="@color/gray_800"
                        android:textColorHint="@color/gray_500" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Degree Selection Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/degree"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_800"

                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/radio_degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_degree_msc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="@string/degree_option_msc"
                            android:textColor="@color/gray_800"
                            android:textSize="16sp"
                            android:lineSpacingExtra="2dp"
                            android:padding="12dp" />

                        <RadioButton
                            android:id="@+id/radio_degree_phd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/degree_option_phd"
                            android:textColor="@color/gray_800"
                            android:textSize="16sp"
                            android:lineSpacingExtra="2dp"
                            android:padding="12dp" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/degree_hint"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        android:paddingTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- API Settings Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/api_base_url"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_800"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/edit_api_url"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/edittext_background"
                        android:padding="16dp"
                        android:hint="http://132.73.167.231:8080/"
                        android:inputType="textUri"
                        android:textSize="16sp"
                        android:textColor="@color/gray_800"
                        android:textColorHint="@color/gray_500" />

                    <!-- API Key field removed - no authentication required -->

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/save"
                    android:layout_marginEnd="8dp"
                    style="@style/SemScanButtonOutlinedPrimary"
                    app:backgroundTint="@color/primary_blue"
                    app:strokeColor="@color/primary_blue_dark"
                    app:strokeWidth="1dp"
                    android:textColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/clear_data"
                    android:layout_marginStart="8dp"
                    style="@style/SemScanButtonOutlinedPrimary"
                    app:strokeColor="@color/accent_red"
                    app:strokeWidth="2dp"
                    android:textColor="@color/accent_red" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>