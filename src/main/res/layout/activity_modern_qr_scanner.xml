<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay with scan frame and controls -->
    <RelativeLayout
        android:id="@+id/overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scanner_overlay_background">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_bar_gradient"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back_white"
                android:background="@drawable/circle_button_background"
                android:padding="12dp"
                android:contentDescription="Back" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR Code"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/flash_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_flash_off"
                android:background="@drawable/circle_button_background"
                android:padding="12dp"
                android:contentDescription="Flash" />

        </LinearLayout>

        <!-- Scan Frame Container -->
        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:background="@drawable/scan_frame_background">

            <!-- Scan Frame -->
            <ImageView
                android:id="@+id/scan_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/scan_frame_corners"
                android:scaleType="fitXY" />

            <!-- Corner Animations -->
            <View
                android:id="@+id/scan_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@drawable/scan_line_gradient"
                android:visibility="visible" />

        </FrameLayout>

        <!-- Instructions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scan_frame"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="32dp">

            <TextView
                android:id="@+id/instruction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point your camera at the QR code"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Position the QR code within the frame"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.8"
                android:gravity="center" />

        </LinearLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/bottom_controls"
            android:layout_marginBottom="24dp"
            android:text="Ready to scan"
            android:textColor="@color/success_green"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/status_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp" />

        <!-- Bottom Controls -->
        <LinearLayout
            android:id="@+id/bottom_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hold steady for best results"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.6" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


