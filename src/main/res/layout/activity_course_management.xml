<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/manage_courses"
        app:titleTextColor="@color/white" />

    <!-- Add Course Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/surface_light">

        <Button
            android:id="@+id/btn_add_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_course"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_add"
            android:drawablePadding="8dp" />

    </LinearLayout>

    <!-- Courses List -->
    <ListView
        android:id="@+id/listView_courses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/gray_200"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_school"
            android:contentDescription="@string/manage_courses"
            android:layout_marginBottom="16dp"
            android:tint="@color/gray_400" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_courses_found"
            android:textSize="18sp"
            android:textColor="@color/gray_600"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_your_first_course"
            android:textSize="14sp"
            android:textColor="@color/gray_500"
            android:layout_marginTop="8dp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>


